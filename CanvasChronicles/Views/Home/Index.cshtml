@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .main-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .main-container h1 {
        font-size: 2.5em;
        color: #333;
        margin-bottom: 0.5em;
    }

    .main-container p {
        font-size: 1.1em;
        color: #666;
        line-height: 1.5;
    }

    .main-container a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

    .main-container a:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    .image-container img {
        max-width: 100%;
        height: auto;
        margin-top: 20px;
        border-radius: 5px;
    }

    .footer {
        text-align: center;
        padding: 20px 0;
        background-color: #333;
        color: #fff;
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
    }
</style>

<div class="main-container">
    <h1>Welcome to Canvas Chronicles</h1>
    <p>Discover insights, stories, and experiences. Dive into the world of art development, art technology, 
        AI-generated art, and more!</p>
    <div class="image-container">
        <img src="~/images/homepage_1.png" alt="Art, Technology, and Development">
    </div>
</div>

<div class="footer">
    Canvas Chronicles © 2024
</div>